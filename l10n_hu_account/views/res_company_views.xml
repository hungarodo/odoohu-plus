<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view inherit -->
    <record id="view_company_form_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.account.view.company.form.inherit</field>
        <field name="inherit_id"
               ref="l10n_hu_base.view_company_form_inherit"
        />
        <field name="model">res.company</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- Fields -->
            <xpath expr="//field[@name='l10n_hu_api_enabled']"
                   position="after"
            >
                <field name="l10n_hu_partner_vat_status_required"
                       string="Partner VAT Status Required"
                       widget="boolean_toggle"
                />
            </xpath>
        </field>
    </record>
</odoo>
        