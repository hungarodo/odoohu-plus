<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="res_company_action"
            model="ir.actions.act_window"
    >
        <field name="name">Companies</field>
        <field name="domain">[('country_code', '=', 'HU')]</field>
        <field name="res_model">res.company</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    <!-- Window action list view -->
    <record id="res_company_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="res_company_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="base.view_company_tree"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action kanban view -->
    <record id="res_company_action_kanban"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="res_company_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="base.view_res_company_kanban"
        />
        <field name="view_mode">kanban</field>
    </record>
    <!-- Window action form view -->
    <record id="res_company_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="res_company_action"
        />
        <field name="sequence">24</field>
        <field name="view_id"
               ref="base.view_company_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
