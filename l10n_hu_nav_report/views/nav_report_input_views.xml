<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view -->
    <record id="nav_report_input_view_form"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.nav.report.input.view.form</field>
        <field name="model">l10n.hu.nav.report.input</field>
        <field name="priority">8</field>
        <field name="arch"
               type="xml"
        >
            <form>
                <header>
                    <field name="status"
                           clickable="0"
                           widget="statusbar"
                    />
                </header>
                <sheet>
                    <div name="button_box"
                         class="oe_button_box"
                    >

                    </div>
                    <widget name="web_ribbon"
                            attrs="{'invisible': [('locked', '=', False)]}"
                            bg_color="bg-success"
                            title="Locked"
                    />
                    <widget name="web_ribbon"
                            attrs="{'invisible': [('active', '=', True)]}"
                            bg_color="bg-danger"
                            title="Archived"
                    />
                    <div class="oe_title">
                        <h4>
                            <field name="name"
                                   placeholder="Name..."
                            />
                        </h4>
                    </div>
                    <group name="base">
                        <group>
                            <field name="rule"
                                   readonly="1"
                            />
                            <field name="category"
                                   options="{'color_field': 'color', 'no_create': True,}"
                                   readonly="1"
                            />
                            <field name="tag"
                                   options="{'color_field': 'color', 'no_create': True,}"
                                   widget="many2many_tags"
                            />
                        </group>
                        <group>
                            <field name="locked"
                                   widget="boolean_toggle"
                            />
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="details"
                              string="Details"
                        >
                            <group name="input_value"
                                   attrs="{'invisible': [('rule_value_type', '=', False)]}"
                                   string="Input Value"
                            >
                                <field name="value_char"
                                       attrs="{'invisible': [('rule_value_type', 'not in', ['char'])]}"
                                       string="String"
                                />
                                <field name="value_date"
                                       attrs="{'invisible': [('rule_value_type', '!=', 'date')]}"
                                       string="Date"
                                />
                                <field name="value_float"
                                       attrs="{'invisible': [('rule_value_type', '!=', 'float')]}"
                                       string="Decimal Number"
                                />
                                <field name="value_integer"
                                       attrs="{'invisible': [('rule_value_type', '!=', 'integer')]}"
                                       string="Whole Number"
                                />
                            </group>
                            <group name="accounting"
                                   attrs="{'invisible': [('account_move_line', '=', False)]}"
                                   string="Accounting"
                            >
                                <group name="accounting_1">
                                    <field name="amount_credit"/>
                                    <field name="amount_debit"/>
                                    <field name="amount_balance"/>
                                    <field name="amount_currency"/>
                                    <field name="amount_net"/>
                                    <field name="amount_tax"/>
                                    <field name="amount_total"/>
                                    <field name="currency_code"/>
                                    <field name="currency_rate"/>
                                    <field name="delivery_date"/>
                                    <field name="payment_date"/>
                                    <field name="payment_method"/>
                                    <field name="downpayment"/>
                                    <field name="tax_base_original"/>
                                    <field name="tax_base_factor"/>
                                    <field name="tax_base_percent"/>
                                    <field name="tax_base_distributed"/>
                                </group>
                                <group name="accounting_2">
                                    <field name="account_account"/>
                                    <field name="account_move"/>
                                    <field name="account_move_line"/>
                                    <field name="account_tag"
                                           widget="many2many_tags"
                                    />
                                    <field name="account_tag_invert"/>
                                    <field name="account_tax"
                                           widget="many2many_tags"
                                    />
                                    <field name="account_tax_line"/>
                                    <field name="account_tax_repartition_line"/>
                                    <field name="account_tax_scope"/>
                                    <field name="account_fiscal_position"/>
                                    <field name="fiscal_position_match"/>
                                    <field name="account_payment_term"/>
                                    <field name="currency"/>
                                </group>
                            </group>
                            <group name="partner"
                                   string="Partner"
                            >
                                <group name="partner_1">
                                    <field name="tax_number"/>
                                    <field name="partner_name"/>
                                    <field name="partner_tax_number"/>
                                    <field name="partner_tax_unit"/>
                                    <field name="partner_country_code"/>
                                    <field name="partner_trade_position"/>
                                </group>
                                <group name="partner_2">
                                    <field name="partner"/>
                                    <field name="partner_country"/>
                                    <field name="partner_fiscal_position"/>
                                </group>
                            </group>
                            <group name="product"
                                   string="Product"
                            >
                                <group name="product_1">
                                    <field name="product_name"/>
                                    <field name="product_code"/>
                                    <field name="product_scope"/>
                                    <field name="product_type"/>
                                    <field name="product_uom_name"/>
                                    <field name="product_uom_category_name"/>
                                </group>
                                <group name="product_2"
                                >
                                    <field name="product"/>
                                    <field name="product_uom"/>
                                    <field name="product_uom_category"/>
                                    <field name="product_uom_type"/>
                                </group>
                            </group>
                        </page>
                        <page name="audit"
                              attrs="{'invisible': [('id', '=', False)]}"
                              string="Audit"
                        >
                            <group>
                                <group name="audit_base">
                                    <field name="id"/>
                                    <field name="company"
                                           readonly="1"
                                    />
                                    <field name="active"/>
                                    <field name="report"
                                           readonly="1"
                                    />
                                    <field name="rule_technical_name"/>
                                    <field name="rule_value_type"/>
                                </group>
                                <group name="audit_crud">
                                    <field name="create_uid"
                                           readonly="1"
                                    />
                                    <field name="create_date"
                                           readonly="1"
                                    />
                                    <field name="write_uid"
                                           readonly="1"
                                    />
                                    <field name="write_date"
                                           readonly="1"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids"
                           widget="mail_activity"
                    />
                    <field name="message_follower_ids"
                           widget="mail_followers"
                    />
                    <field name="message_ids"
                           widget="mail_thread"
                    />
                </div>
            </form>
        </field>
    </record>
    <!-- List view -->
    <record id="nav_report_input_view_list"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.nav.report.input.view.list</field>
        <field name="model">l10n.hu.nav.report.input</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <tree multi_edit="1">
                <field name="report"
                       optional="hide"
                />
                <field name="locked"
                       optional="hide"
                       widget="boolean_toggle"
                />
                <field name="name"/>
                <field name="category"
                       options="{'color_field': 'color'}"
                />
                <field name="tag"
                       options="{'color_field': 'color'}"
                       widget="many2many_tags"
                />
                <field name="value_display"
                       optional="show"
                       string="Value"
                />
                <field name="partner"/>
                <field name="account_account"
                       optional="hide"
                />
                <field name="account_move"
                       optional="hide"
                />
                <field name="account_move_line"/>
                <field name="account_tax"
                       optional="show"
                       widget="many2many_tags"
                />
                <field name="account_tax_line"
                       optional="show"
                       widget="badge"
                />
                <field name="write_date"
                       optional="hide"
                />
                <field name="company"
                       optional="hide"
                />
            </tree>
        </field>
    </record>
    <!-- List view report -->
    <record id="nav_report_input_view_list_report"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.nav.report.input.view.list.report</field>
        <field name="model">l10n.hu.nav.report.input</field>
        <field name="priority">32</field>
        <field name="arch"
               type="xml"
        >
            <tree>
                <field name="id"
                       invisible="1"
                />
                <field name="name"
                       required="1"
                />
            </tree>
        </field>
    </record>
    <!-- Search view -->
    <record id="nav_report_input_view_search"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.nav.report.input.view.search</field>
        <field name="model">l10n.hu.nav.report.input</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <search>
                <!-- Field -->
                <field name="name"/>
                <field name="report"/>
                <field name="category"/>
                <field name="tag"/>
                <!-- Filter -->
                <filter name="net_amount_filter"
                        domain="[('account_tax','!=', False)]"
                        string="Net Amount"
                />
                <filter name="tax_amount_filter"
                        domain="[('account_tax_line','!=', False)]"
                        string="Tax Amount"
                />
                <separator/>
                <filter name="locked_filter"
                        domain="[('locked','=', True)]"
                        string="Locked"
                />
                <filter name="not_locked_filter"
                        domain="[('locked','=', False)]"
                        string="Not locked"
                />
                <!-- Filter group by -->
                <group name="filter_group_by"
                       expand="0"
                       string="Group By"
                >
                    <filter name="category_filter_group_by"
                            context="{'group_by': 'category'}"
                            string="Category"
                    />
                    <filter name="tag_filter_group_by"
                            context="{'group_by': 'tag'}"
                            string="Tag"
                    />
                    <separator/>
                    <filter name="account_account_filter_group_by"
                            context="{'group_by': 'account_account'}"
                            string="Account"
                    />

                    <filter name="account_tax_filter_group_by"
                            context="{'group_by': 'account_tax'}"
                            string="Taxes"
                    />
                    <filter name="account_tax_line_filter_group_by"
                            context="{'group_by': 'account_tax_line'}"
                            string="Originator Tax"
                    />
                    <separator/>
                    <filter name="locked_filter_group_by"
                            context="{'group_by': 'locked'}"
                            string="Locked"
                    />
                    <filter name="report_filter_group_by"
                            context="{'group_by': 'report'}"
                            string="Report"
                    />
                    <filter name="company_filter_group_by"
                            context="{'group_by': 'company'}"
                            string="Company"
                    />
                </group>
            </search>
        </field>
    </record>
</odoo>
