<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template name="l10n.hu.plus.report.invoice.document.inherit"
              id="report_invoice_document_inherit"
              inherit_id="account.report_invoice_document"
    >
        <!-- Document type -->
        <xpath expr="//h2[1]"
               position="replace"
        >
            <h2>
                <span t-if="not proforma"/>
                <span t-else="">PROFORMA</span>
                <!-- document_type BEGIN -->
                <span t-if="o.move_type in['in_invoice', 'in_refund', 'out_invoice', 'out_refund'] and o.l10n_hu_plus_document_type">
                    <span t-field="o.l10n_hu_plus_document_type"/>
                </span>
                <!-- document_type END -->
                <span t-elif="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">Credit Note</span>
                <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Draft Credit Note</span>
                <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Cancelled Credit Note</span>
                <span t-elif="o.move_type == 'in_refund'">Vendor Credit Note</span>
                <span t-elif="o.move_type == 'in_invoice'">Vendor Bill</span>
                <span t-if="o.name != '/'" t-field="o.name">INV/2023/0001</span>
            </h2>
        </xpath>
        <!-- Cash accounting -->
        <xpath expr="//div[@name='comment']"
               position="before"
        >
            <div name="l10n_hu_period_summary"
                 class="text-muted mb-3"
                 t-if="o.l10n_hu_cash_accounting"
            >
                The issuer of the invoice applies cash accounting.
            </div>
        </xpath>
        <!-- Period summary -->
        <xpath expr="//div[@name='comment']"
               position="before"
        >
            <div name="l10n_hu_period_summary"
                 class="text-muted mb-3"
                 t-if="o.l10n_hu_invoice_delivery_period_start and o.l10n_hu_invoice_delivery_period_end and o.l10n_hu_invoice_delivery_period_summary"
            >
                <span t-field="o.l10n_hu_invoice_delivery_period_summary"/>
            </div>
        </xpath>
    </template>
</odoo>
