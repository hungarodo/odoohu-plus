    <!-- Window action list view -->
    <record id="account_tax_repartition_line_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_tax_repartition_line_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="account_tax_repartition_line_view_list"
        />
        <field name="view_mode">tree</field>
    </record>
