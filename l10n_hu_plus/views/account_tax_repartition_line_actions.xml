<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="account_tax_repartition_line_action"
            model="ir.actions.act_window"
    >
        <field name="name">Tax Repartition Lines</field>
        <field name="res_model">account.tax.repartition.line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
