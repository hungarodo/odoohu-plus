<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="app_action"
            model="ir.actions.act_window"
    >
        <field name="name">Apps</field>
        <field name="domain">[('name', 'ilike', 'l10n_hu')]</field>
        <field name="res_model">ir.module.module</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Window action kanban view -->
    <record id="app_action_kanban"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="app_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="base.module_view_kanban"
        />
        <field name="view_mode">kanban</field>
    </record>
    <!-- Window action list view -->
    <record id="app_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="app_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="base.module_tree"
        />
        <field name="view_mode">tree</field>
    </record>
</odoo>
