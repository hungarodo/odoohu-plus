<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view -->
    <record id="account_payment_method_view_form"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.payment.method.view.form</field>
        <field name="model">account.payment.method</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <form>
                <sheet>
                    <group name="base">
                        <group name="base_1">
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group name="base_2">
                            <field name="payment_type"/>
                        </group>
                    </group>
                    <notebook name="notebook">
                        <page name="audit"
                              invisible="not id"
                              string="Audit"
                        >
                            <group name="audit">
                                <group name="audit_1">
                                    <field name="id"
                                           readonly="1"
                                    />
                                </group>
                                <group name="audit_2">
                                    <field name="create_uid"
                                           readonly="1"
                                    />
                                    <field name="create_date"
                                           readonly="1"
                                    />
                                    <field name="write_uid"
                                           readonly="1"
                                    />
                                    <field name="write_date"
                                           readonly="1"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- List view -->
    <record id="account_payment_method_view_list"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.payment.method.view.list</field>
        <field name="model">account.payment.method</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <tree create="1"
                  delete="1"
                  edit="1"
            >
                <field name="name"/>
                <field name="code"/>
                <field name="payment_type"/>
                <field name="write_date"
                       optional="hide"
                />
            </tree>
        </field>
    </record>
    <!-- Search view -->
    <record id="account_payment_method_view_search"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.payment.method.view.search</field>
        <field name="model">account.payment.method</field>
        <field name="priority">16</field>
        <field name="arch"
               type="xml"
        >
            <search>
                <field name="name"/>
                <field name="code"/>
                <separator/>
                <filter name="payment_type_filter_group_by"
                        context="{'group_by': 'payment_type'}"
                        string="Payment Type"
                />
            </search>
        </field>
    </record>
</odoo>
