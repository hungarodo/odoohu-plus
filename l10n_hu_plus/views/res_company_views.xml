<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view inherit -->
    <record id="view_company_form_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.view.company.form.inherit</field>
        <field name="inherit_id"
               ref="base.view_company_form"
        />
        <field name="model">res.company</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- Fields -->
            <xpath expr="//page[last()]"
                   position="after"
            >
                <page name="l10n_hu_plus"
                      string="HU+"
                >
                    <group name="l10n_hu_plus">
                        <group name="l10n_hu_plus_1">
                            <field name="l10n_hu_plus_api_enabled"
                                   string="API Enabled"
                                   widget="boolean_toggle"
                            />
                            <field name="l10n_hu_plus_api_registered"
                                   invisible="1"
                                   string="API Registered"
                            />
                            <field name="l10n_hu_plus_api_timestamp"
                                   string="API Timestamp"
                            />
                        </group>
                        <group name="l10n_hu_plus_2">
                            <field name="l10n_hu_plus_api_license_valid"
                                   string="API License Valid"
                            />
                            <label name="l10n_hu_plus_actions"
                                   for="action_l10n_hu_plus_api_get_objects"
                                   string="Actions"
                            />
                            <div name="l10n_hu_plus_actions">
                                <div name="action_l10n_hu_plus_api_create_registration"
                                     invisible="l10n_hu_plus_api_registered"
                                >
                                    <button name="action_l10n_hu_plus_api_create_registration"
                                            class="btn btn-link"
                                            icon="fa-magic"
                                            string="Create API registration"
                                            type="object"
                                    />
                                </div>
                                <div name="action_l10n_hu_plus_api_get_objects"
                                     invisible="not l10n_hu_plus_api_registered"
                                >
                                    <button name="action_l10n_hu_plus_api_get_objects"
                                            class="btn btn-link"
                                            icon="fa-download"
                                            string="Download API objects"
                                            type="object"
                                    />
                                </div>
                                <div name="l10n_hu_plus_api_check_delete_registration"
                                     invisible="not l10n_hu_plus_api_registered"
                                >
                                    <button name="action_l10n_hu_plus_api_check_registration"
                                            class="btn btn-link"
                                            icon="fa-magic"
                                            string="Check API registration"
                                            type="object"
                                    />
                                    <br/>
                                    <button name="action_l10n_hu_plus_api_delete_registration"
                                            class="btn btn-link"
                                            icon="fa-trash"
                                            string="Delete API registration"
                                            type="object"
                                    />
                                </div>
                                <div name="action_l10n_hu_plus_api_list_logs">
                                    <button name="action_l10n_hu_plus_api_list_logs"
                                            class="btn btn-link"
                                            icon="fa-history"
                                            string="View API logs"
                                            type="object"
                                    />
                                </div>
                            </div>
                        </group>
                    </group>
                    <group name="l10n_hu_plus_api_data"
                           groups="l10n_hu_plus.manager_group"
                           string="API Data"
                    >
                        <div colspan="2">
                            <field name="l10n_hu_plus_api_data"
                                   string="API Data"
                                   style="word-break: break-word;"
                            />
                        </div>
                        <div colspan="2">
                            <button name="action_l10n_hu_plus_api_reset_registration"
                                    class="btn btn-link text-danger"
                                    icon="fa-eraser"
                                    string="Reset API Registration"
                                    type="object"
                            />
                        </div>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
        