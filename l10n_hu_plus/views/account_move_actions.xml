<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Customer invoice action -->
    <record id="account_move_customer_invoice_action"
            model="ir.actions.act_window"
    >
        <field name="name">Customer Invoices</field>
        <field name="context">{'default_move_type': 'out_invoice', 'search_default_posted':1, 'search_default_l10n_hu_vat_declaration_filter': 1,}</field>
        <field name="domain">[('move_type', 'in', ['out_invoice', 'out_refund'])]</field>
        <field name="res_model">account.move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    <!-- Customer invoice action list view -->
    <record id="account_move_customer_invoice_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_move_customer_invoice_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="account.view_out_invoice_tree"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Customer invoice action kanban view -->
    <record id="account_move_customer_invoice_action_kanban"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_move_customer_invoice_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="account.view_account_move_kanban"
        />
        <field name="view_mode">kanban</field>
    </record>
    <!-- Customer invoice action form view -->
    <record id="account_move_customer_invoice_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_move_customer_invoice_action"
        />
        <field name="sequence">32</field>
        <field name="view_id"
               ref="account.view_move_form"
        />
        <field name="view_mode">form</field>
    </record>
    <!-- Vendor bill action -->
    <record id="account_move_vendor_bill_action"
            model="ir.actions.act_window"
    >
        <field name="name">Vendor Bills</field>
        <field name="context">{'default_move_type': 'in_invoice', 'search_default_posted':1, 'search_default_l10n_hu_vat_declaration_filter': 1,}</field>
        <field name="domain">[('move_type', 'in', ['in_invoice', 'in_refund'])]</field>
        <field name="res_model">account.move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    <!-- Vendor bill action list view -->
    <record id="account_move_vendor_bill_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_move_vendor_bill_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="account.view_in_invoice_bill_tree"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Vendor bill action kanban view -->
    <record id="account_move_vendor_bill_action_kanban"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_move_vendor_bill_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="account.view_account_move_kanban"
        />
        <field name="view_mode">kanban</field>
    </record>
    <!-- Vendor bill action form view -->
    <record id="account_move_vendor_bill_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_move_vendor_bill_action"
        />
        <field name="sequence">32</field>
        <field name="view_id"
               ref="account.view_move_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
