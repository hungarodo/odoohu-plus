<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="config_parameter_action"
            model="ir.actions.act_window"
    >
        <field name="name">System Parameters</field>
        <field name="domain">[('key', 'ilike', 'l10n_hu')]</field>
        <field name="res_model">ir.config_parameter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Window action list view -->
    <record id="config_parameter_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="config_parameter_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="base.view_ir_config_list"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action form view -->
    <record id="config_parameter_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="config_parameter_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="base.view_ir_config_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
