<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view inherit -->
    <record id="view_payment_term_form_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.view.payment.term.form.inherit</field>
        <field name="inherit_id"
               ref="account.view_payment_term_form"
        />
        <field name="model">account.payment.term</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <xpath expr="//field[@name='name']"
                   position="after"
            >
                <field name="l10n_hu_nav_method"
                       string="NAV Method"
                />
            </xpath>
        </field>
    </record>
    <!-- Form view inherit -->
    <record id="view_payment_term_tree_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.view.payment.term.tree.inherit</field>
        <field name="inherit_id"
               ref="account.view_payment_term_tree"
        />
        <field name="model">account.payment.term</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <xpath expr="//field[@name='name']"
                   position="after"
            >
                <field name="l10n_hu_nav_method"
                       string="NAV Method"
                />
            </xpath>
        </field>
    </record>
</odoo>
