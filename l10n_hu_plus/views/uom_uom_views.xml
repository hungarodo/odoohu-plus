<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view inherit -->
    <record id="product_uom_form_view_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.product.uom.form.view.inherit</field>
        <field name="inherit_id"
               ref="uom.product_uom_form_view"
        />
        <field name="model">uom.uom</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- HU field -->
            <xpath expr="//field[@name='rounding']"
                   position="after"
            >
                <field name="l10n_hu_plus_api_enabled"
                       string="HU+ API"
                       widget="boolean_toggle"
                />
                <field name="l10n_hu_plus_technical_name"
                       string="HU+ Technical Name"
                />
    </xpath>
        </field>
    </record>
    <!-- List view inherit -->
    <record id="product_uom_tree_view_inherit"
            model="ir.ui.view"
    >
        <field name="name">l10n.hu.plus.product.uom.tree.view.inherit</field>
        <field name="inherit_id"
               ref="uom.product_uom_tree_view"
        />
        <field name="model">uom.uom</field>
        <field name="priority">36</field>
        <field name="arch"
               type="xml"
        >
            <!-- HU field -->
            <xpath expr="//field[@name='uom_type']"
                   position="after"
            >
                <field name="l10n_hu_plus_api_enabled"
                       string="HU+ API"
                       optional="hide"
                />
                <field name="l10n_hu_plus_technical_name"
                       optional="hide"
                       string="HU+ Technical Name"
                />
            </xpath>
        </field>
    </record>
</odoo>
