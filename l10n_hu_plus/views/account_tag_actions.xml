<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Window action -->
    <record id="account_tag_action"
            model="ir.actions.act_window"
    >
        <field name="name">Account Tags</field>
        <field name="domain">[('l10n_hu_country_code', '=', 'HU')]</field>
        <field name="res_model">account.account.tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Window action list view -->
    <record id="account_tag_action_list"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_tag_action"
        />
        <field name="sequence">8</field>
        <field name="view_id"
               ref="account.account_tag_view_tree"
        />
        <field name="view_mode">tree</field>
    </record>
    <!-- Window action form view -->
    <record id="account_tag_action_form"
            model="ir.actions.act_window.view"
    >
        <field name="act_window_id"
               ref="account_tag_action"
        />
        <field name="sequence">16</field>
        <field name="view_id"
               ref="account.account_tag_view_form"
        />
        <field name="view_mode">form</field>
    </record>
</odoo>
